<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.star.mall.mapper.ProductMapper">
    <insert id="productAdd" parameterType="com.star.mall.pojo.Product">
        insert into product (cartid, name, descn)
        values (#{cartId}, #{name}, #{descn})
    </insert>
    <select id="productList" resultType="com.star.mall.pojo.Product">
        select *
        from product
    </select>
    <update id="productUpdate" parameterType="com.star.mall.pojo.Product">
        update product
        <set>
            cartId=#{cartId},
            name=#{name},
            descn=#{descn}
        </set>
        <where>
            productId=#{productId}
        </where>
    </update>
    <delete id="productDelete">
        delete from product
        <where>
            productId=#{productId}
        </where>
    </delete>
</mapper>